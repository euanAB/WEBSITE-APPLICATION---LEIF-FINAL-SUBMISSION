@model IEnumerable<Leif_Gym_Manager.Models.Member>

@{
    ViewData["Title"] = "Index";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js" defer></script>

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />


<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h1>Members</h1>
                        <i class="fa fa-plus fa-align-justify"></i> <p>
                            <a asp-action="Create">Create New</a>
                        </p>
                    </div>
                    <div class="card-body">
                        <table id="table_id" class="table table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                   @*  <th>
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </th> *@
                                 @*    <th>
                                        @Html.DisplayNameFor(model => model.MemberStatusId)
                                    </th>
                                    
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateOfBirth)
                                    </th> *@
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                 @*    <th>
                                        @Html.DisplayNameFor(model => model.Ethinicity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Religion)
                                    </th> *@
                                 
                                   @*  <th>
                                        @Html.DisplayNameFor(model => model.MedicalNotes)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StartDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Weight)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Height)
                                    </th> *@
                                  @*   <th>
                                        @Html.DisplayNameFor(model => model.CreatedAt)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UpdatedAt)
                                    </th> *@
                                    <th>
                                        status
                                    </th>
                                   @*  <th>
                                        @Html.DisplayNameFor(model => model.MemberShipType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PaymentType)
                                    </th> *@
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName) - @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                       
                                        
                                        @* <td>
                                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                                        </td> *@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                       @*  <td>
                                            @Html.DisplayFor(modelItem => item.Ethinicity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Religion)
                                        </td>
                                       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MedicalNotes)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Weight)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Height)
                                        </td> *@
                                       @*  <td>
                                            @Html.DisplayFor(modelItem => item.CreatedAt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UpdatedAt)
                                        </td> *@
                                        <td>
                                            @if (item.MemberStatusId == 2)
                                            {
                                                <span class="badge badge-success">Active</span>
                                            }
                                            else if (item.MemberStatusId == 2)
                                            {
                                                <span class="badge badge-danger">Cancelled</span>
                                            }
                                            else if (item.MemberStatusId == 2)
                                            {
                                                <span class="badge badge-warning">On Hold</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Other</span>
                                            }
                                        </td>
                                        @* <td>
                                            @Html.DisplayFor(modelItem => item.MemberShipType.MemberShipName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PaymentType.PaymentAmount)
                                        </td> *@
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.MembersId">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.MembersId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.MembersId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>
<script>
    $(document).ready(function () {
        $("#table_id").dataTable();
    });
</script>