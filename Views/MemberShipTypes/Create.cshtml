@model Leif_Gym_Manager.Models.MemberShipType

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <h1> Create Memberships</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Price(£)</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Frequency" class="control-label"></label>
                            <select asp-for="Frequency" class="form-control" asp-items="ViewBag.Frequency"></select>

                            <span asp-validation-for="Frequency" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label  class="control-label">Membership Type</label>
                            <input asp-for="MemberShipName" class="form-control" />
                            <span asp-validation-for="MemberShipName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactTerm" class="control-label"></label>
                            <input asp-for="ContactTerm" class="form-control" />
                            <span asp-validation-for="ContactTerm" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MinimumAge" class="control-label"></label>
                            <input asp-for="MinimumAge" class="form-control" />
                            <span asp-validation-for="MinimumAge" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaximumAge" class="control-label"></label>
                            <input asp-for="MaximumAge" class="form-control" />
                            <span asp-validation-for="MaximumAge" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
