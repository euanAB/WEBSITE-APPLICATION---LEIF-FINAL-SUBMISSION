@model Leif_Gym_Manager.Models.LoginModel


@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutFullScreen";
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card-group">
                    <div class="card p-4">

                        <div class="card-body">
                            <div class="row justify-content-center">
                                <img src="/img/brand/logo.jpg" width="300" height="50" alt="CoreUI Logo">
                            </div>
                            <div style="text-align:center">
                                <h1>Login</h1>
                            </div>
                            <div style="text-align:center">
                                <p class="text-muted">Sign into you account</p>
                            </div>
                            <form asp-action="Index">
                                <div class="input-group mb-3">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-user"></i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" asp-for="username" placeholder="Username">
                                </div>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-lock"></i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="password" asp-for="Password" placeholder="Password">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div style="text-align:center">
                                            <input class="btn btn-primary px-4" value="Login" type="submit">
                                        </div>
                                    </div>
                                    @*  <div class="col-6 text-right">
                                    <button class="btn btn-link px-0" type="button">Forgot password?</button>
                                    </div> *@
                                </div>
                            </form>

                        </div>
                    </div>
                    @* <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                    <div class="card-body text-center">
                    <div>
                    <h2>Sign up</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    <button class="btn btn-primary active mt-3" onclick="location.href='@Url.Action("Register","Home")'" type="button">Register Now!</button>
                    </div>
                    </div>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>
